    <description>COM_ADVFORM_XML_DESCRIPTION</description>
    <namespace path="administrator/components/com_advform/src">SamWebTechnologies\Component\Advform</namespace>
    
    <install>
        <sql>
            <file driver="mysql" charset="utf8">administrator/components/com_advform/sql/install.mysql.utf8.sql</file>
