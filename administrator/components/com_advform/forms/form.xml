<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="general" label="COM_ADVFORM_FIELDSET_GENERAL">
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />

        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            description="COM_ADVFORM_FORM_TITLE_DESC"
            class="form-control"
            size="40"
            required="true"
        />

        <field
            name="description"
            type="textarea"
            label="JGLOBAL_DESCRIPTION"
            description="COM_ADVFORM_FORM_DESCRIPTION_DESC"
            class="form-control"
            rows="3"
            cols="40"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="COM_ADVFORM_FORM_STATE_DESC"
            class="form-select"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>

    <fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">
        <field
            name="created"
            type="calendar"
            label="JGLOBAL_CREATED_DATE"
            class="form-control"
            size="22"
            filter="user_utc"
            readonly="true"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            class="readonly"
            readonly="true"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="form-control readonly"
            size="22"
            readonly="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
        />
    </fieldset>
</form>
