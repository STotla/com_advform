<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="general" label="COM_ADVFORM_FIELDSET_GENERAL">
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />

        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            description="COM_ADVFORM_FIELD_TITLE_DESC"
            class="form-control"
            size="40"
            required="true"
        />

        <field
            name="name"
            type="text"
            label="COM_ADVFORM_FIELD_NAME_LABEL"
            description="COM_ADVFORM_FIELD_NAME_DESC"
            class="form-control"
            size="40"
            hint="COM_ADVFORM_FIELD_NAME_HINT"
        />

        <field
            name="type"
            type="list"
            label="COM_ADVFORM_FIELD_TYPE_LABEL"
            description="COM_ADVFORM_FIELD_TYPE_DESC"
            class="form-select"
            required="true"
            default="text"
        >
            <option value="text">COM_ADVFORM_FIELD_TYPE_TEXT</option>
            <option value="textarea">COM_ADVFORM_FIELD_TYPE_TEXTAREA</option>
            <option value="email">COM_ADVFORM_FIELD_TYPE_EMAIL</option>
            <option value="url">COM_ADVFORM_FIELD_TYPE_URL</option>
            <option value="telephone">COM_ADVFORM_FIELD_TYPE_TELEPHONE</option>
            <option value="number">COM_ADVFORM_FIELD_TYPE_NUMBER</option>
            <option value="calendar">COM_ADVFORM_FIELD_TYPE_CALENDAR</option>
            <option value="list">COM_ADVFORM_FIELD_TYPE_LIST</option>
            <option value="radio">COM_ADVFORM_FIELD_TYPE_RADIO</option>
            <option value="checkbox">COM_ADVFORM_FIELD_TYPE_CHECKBOX</option>
            <option value="checkboxes">COM_ADVFORM_FIELD_TYPE_CHECKBOXES</option>
            <option value="editor">COM_ADVFORM_FIELD_TYPE_EDITOR</option>
        </field>

        <field
            name="label"
            type="text"
            label="COM_ADVFORM_FIELD_LABEL_LABEL"
            description="COM_ADVFORM_FIELD_LABEL_DESC"
            class="form-control"
            size="40"
        />

        <field
            name="description"
            type="textarea"
            label="JGLOBAL_DESCRIPTION"
            description="COM_ADVFORM_FIELD_DESCRIPTION_DESC"
            class="form-control"
            rows="3"
            cols="40"
        />

        <field
            name="required"
            type="radio"
            label="COM_ADVFORM_FIELD_REQUIRED_LABEL"
            description="COM_ADVFORM_FIELD_REQUIRED_DESC"
            class="btn-group btn-group-yesno"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="default_value"
            type="textarea"
            label="COM_ADVFORM_FIELD_DEFAULT_VALUE_LABEL"
            description="COM_ADVFORM_FIELD_DEFAULT_VALUE_DESC"
            class="form-control"
            rows="2"
            cols="40"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="COM_ADVFORM_FIELD_STATE_DESC"
            class="form-select"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>

    <fieldset name="options" label="COM_ADVFORM_FIELDSET_OPTIONS">
        <field
            name="options"
            type="subform"
            label="COM_ADVFORM_FIELD_OPTIONS_LABEL"
            description="COM_ADVFORM_FIELD_OPTIONS_DESC"
            multiple="true"
            formsource="administrator/components/com_advform/forms/option.xml"
            showon="type:list,radio,checkboxes"
        />
    </fieldset>

    <fieldset name="settings" label="COM_ADVFORM_FIELDSET_SETTINGS">
        <field
            name="show_on_profile"
            type="radio"
            label="COM_ADVFORM_FIELD_SHOW_ON_PROFILE_LABEL"
            description="COM_ADVFORM_FIELD_SHOW_ON_PROFILE_DESC"
            class="btn-group btn-group-yesno"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="show_on_registration"
            type="radio"
            label="COM_ADVFORM_FIELD_SHOW_ON_REGISTRATION_LABEL"
            description="COM_ADVFORM_FIELD_SHOW_ON_REGISTRATION_DESC"
            class="btn-group btn-group-yesno"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="user_editable"
            type="radio"
            label="COM_ADVFORM_FIELD_USER_EDITABLE_LABEL"
            description="COM_ADVFORM_FIELD_USER_EDITABLE_DESC"
            class="btn-group btn-group-yesno"
            default="1"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="show_in_admin"
            type="radio"
            label="COM_ADVFORM_FIELD_SHOW_IN_ADMIN_LABEL"
            description="COM_ADVFORM_FIELD_SHOW_IN_ADMIN_DESC"
            class="btn-group btn-group-yesno"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="params"
            type="subform"
            label="COM_ADVFORM_FIELD_PARAMS_LABEL"
            description="COM_ADVFORM_FIELD_PARAMS_DESC"
            multiple="false"
        >
            <form>
                <field
                    name="placeholder"
                    type="text"
                    label="COM_ADVFORM_FIELD_PLACEHOLDER_LABEL"
                    description="COM_ADVFORM_FIELD_PLACEHOLDER_DESC"
                    class="form-control"
                />

                <field
                    name="class"
                    type="text"
                    label="COM_ADVFORM_FIELD_CLASS_LABEL"
                    description="COM_ADVFORM_FIELD_CLASS_DESC"
                    class="form-control"
                />
            </form>
        </field>

        <field
            name="ordering"
            type="ordering"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
            class="form-select"
        />
    </fieldset>

    <fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">
        <field
            name="created"
            type="calendar"
            label="JGLOBAL_CREATED_DATE"
            class="form-control"
            size="22"
            filter="user_utc"
            readonly="true"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            class="readonly"
            readonly="true"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="form-control readonly"
            size="22"
            readonly="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
        />
    </fieldset>
</form>
